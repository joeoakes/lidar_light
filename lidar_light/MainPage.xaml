<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:lidar_light"
             x:Class="lidar_light.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Object Type"
                FontSize="32"
                HorizontalOptions="Center" />
            <Label
                x:Name="ObjectTypeLabel"
                Text=""
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                Text="Object Distance"
                FontSize="32"
                HorizontalOptions="Center" />
            <Label
                x:Name="DistanceLabel"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                Text="Light Estimate"
                FontSize="32"
                HorizontalOptions="Center" />
            <Label
                x:Name="LumensLabel"
                FontSize="18"
                HorizontalOptions="Center" />

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

